<body>

  <!-- upper half brown color start-->
  <div class="upper-half">

    <nav class="navbar navbar-expand-md">
      <a href="#" class="navbar-brand">codeforces tracker</a>

      <i class="fa-solid fa-bars navbar-toggler text-white" data-target="#mobile-menu" data-toggle="collapse"></i>
      <div class="collapse navbar-collapse" id="mobile-menu">
        <ul class="navbar-nav ml-auto" role="tablist">
          <li class="nav-item mx-2"><a href="#user-handle" class="nav-link active" id="home" data-toggle="tab">Home</a></li>
          <li class="nav-item mx-2"><a href="#compare-handle" class="nav-link" id="compare" data-toggle="tab">Compare</a></li>
          <li class="nav-item mx-2"><a href="/about" class="nav-link">About us</a></li>
        </ul>
      </div>
    </nav>

    <!-- codeforces user handle box -->
    <div class="tab-content">
      <div id="user-handle" class="container-fluid tab-pane active">
        <section class="user-handle-box text-center px-5">
          <img src="/code-review-animate.svg" alt="code-review-animate.svg" id="code-review">
          <div class="container">
            <form action="/menu" method = "post">
              <div class="handle-box row">
                <div class="form-field col-lg-12">
                  <input type="text" name = "userName" placeholder="Codeforces User Handle">
                </div>
                <div class="form-field col-lg-12">
                  <input type="submit" value="Submit">
                </div>
              </div>
            </form>
          </div>
        </section>
      </div>

      <div id="compare-handle" class="container-fluid tab-pane animate__animated animate__zoomInDown">
        <section class="user-handle-box text-center px-5">
          <img src="/code-review-animate.svg" alt="code-review-animate.svg" id="code-review">
          <div class="container">
            <form action="pages/compare.html">
            <div class="handle-box row">
              <div class="form-field col-lg-6">
                <input type="text" placeholder="Codeforces User1 Handle">
              </div>
              <div class="form-field col-lg-6">
                <input type="text" placeholder="Codeforces User2 Handle">
              </div>
              <div class="form-field col-lg-12">
                <input type="submit" value="Submit">
              </div>
            </div>
            </form>
          </div>
        </section>
      </div>

    </div>

  </div>
  <!-- upper half brown color end -->


  <div class="text-center developer">

    <p style="font-weight:500;"> Developed by <a href="pages/about.html" style="color:var(--primary);text-decoration:underline;">OnlyCoolers</a></p>

